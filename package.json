{
    "name": "@akutishevsky/lunchmoney-mcp",
    "version": "1.3.0",
    "description": "Model Context Protocol server for LunchMoney personal finance management",
    "main": "build/index.js",
    "bin": {
        "lunchmoney-mcp": "./build/index.js"
    },
    "scripts": {
        "build:mcpb": "npm run build && mkdir -p dist && npx @anthropic-ai/mcpb pack . dist/lunchmoney.mcpb",
        "build": "tsc && chmod 755 build/index.js",
        "dev": "LUNCHMONEY_API_TOKEN='YOUR_TOKEN_HERE' npx @modelcontextprotocol/inspector node build/index.js",
        "format": "prettier --write .",
        "lint": "eslint src/",
        "inspect": "npx @modelcontextprotocol/inspector node build/index.js",
        "prepare": "husky",
        "prepublish:changelog": "claude -p --model haiku --allowedTools Bash,Edit,Read,Glob,Grep -- 'Review all git commits since the last version tag (use git log and git diff). Summarize changes into @CHANGELOG.md following the existing format. Bump the version in package.json, manifest.json, server.json, and src/index.ts.'",
        "prepublishOnly": "npm run build:mcpb"
    },
    "files": [
        "build"
    ],
    "keywords": [
        "mcp",
        "lunchmoney",
        "finance",
        "model-context-protocol",
        "ai",
        "assistant"
    ],
    "author": "Anton Kutishevskyi",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/akutishevsky/lunchmoney-mcp.git"
    },
    "homepage": "https://github.com/akutishevsky/lunchmoney-mcp#readme",
    "type": "module",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.0",
        "@toon-format/toon": "^2.1.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^24.1.0",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0"
    }
}
